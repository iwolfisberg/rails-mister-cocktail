<div class="navbar-cocktail-bis fixed-top d-flex justify-content-between align-items-center">
  <p><%= link_to "Cocktails", cocktails_path, class: "cocktails" %></p>
  <div class="navbar-cocktail-search-add d-flex justify-content-end align-items-baseline">
    <%= form_tag(cocktails_path, method: "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search cocktails" %>
      <i class="fas fa-search"></i>
    <% end %>
    <%= render partial: 'cocktail' if @cocktails.present? %>
    <p id="btn-cocktail"><%= link_to "Add cocktail", new_cocktail_path, class:"cocktails" %></p>
  </div>
</div>
